{
	"name": "drizzle-orm",
	"version": "0.13.0",
	"description": "Drizzle ORM package for SQL databases",
	"main": "index.js",
	"types": "index.d.ts",
	"scripts": {
		"build": "tsc",
		"pack": "cp package.json dist/ && (cd dist && pnpm pack --pack-destination ..) && rm -f package.tgz && mv *.tgz package.tgz",
		"publish": "pnpm publish package.tgz",
		"build:int": "pnpm build && pnpm run pack"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/drizzle-team/drizzle-orm.git"
	},
	"keywords": [
		"orm",
		"pg",
		"mysql",
		"postgresql",
		"postgres",
		"database",
		"sql",
		"typescript"
	],
	"author": "",
	"license": "Apache-2.0",
	"bugs": {
		"url": "https://github.com/drizzle-team/drizzle-orm/issues"
	},
	"homepage": "https://github.com/drizzle-team/drizzle-orm#readme",
	"peerDependencies": {
		"drizzle-orm-mysql": ">=0.13.0",
		"drizzle-orm-pg": ">=0.13.0",
		"mysql2": ">=2 <3",
		"pg": ">=8 <9",
		"sqlite3": ">=5 <6"
	},
	"peerDependenciesMeta": {
		"mysql2": {
			"optional": true
		},
		"pg": {
			"optional": true
		},
		"sqlite3": {
			"optional": true
		},
		"drizzle-orm-pg": {
			"optional": true
		},
		"drizzle-orm-mysql": {
			"optional": true
		}
	},
	"devDependencies": {
		"@types/pg": "^8.6.1",
		"@types/sqlite3": "^3.1.8",
		"dprint": "^0.30.3",
		"mysql2": "^2.3.3",
		"pg": "^8.6.0",
		"resolve-tspaths": "^0.7.0",
		"sqlite3": "^5.0.8",
		"ts-node": "^10.8.2",
		"typescript": "4.8.0-beta",
		"uvu": "^0.5.3"
	},
	"dependencies": {
		"type-fest": "^2.16.0"
	}
}
